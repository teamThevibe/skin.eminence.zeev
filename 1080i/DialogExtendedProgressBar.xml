<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>0</zorder>
    <controls>
        <control type="group">

            <control type="group">
			
                <visible>!Window.IsVisible(home) + !Window.IsVisible(weather) + !Player.HasVideo</visible>
                <visible>!Window.IsVisible(DialogKaiToast.xml)</visible>
                <animation effect="slide" start="0,64" end="0" time="125">WindowOpen</animation>
                <animation effect="slide" end="0,64" start="0" time="125">WindowClose</animation>
                <control type="image">
                    <left>0</left>
                    <posy>64r</posy>
                    <width>100%</width>
                    <height>64</height>  
                    <aspectratio>scale</aspectratio>
                    <texture colordiffuse="DialogBG">common/white.png</texture>
                    <visible>Window.IsVisible(fullscreenvideo)</visible>
                </control>
                <control type="image">
                    <posx>16</posx>
                    <posy>48r</posy>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <right>side</right>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
            <control type="group">
			
					<visible>!Skin.String(HomeStyle, notile)</visible>
					<visible>!Skin.String(HomeStyle, LGVIEW)</visible>
					<visible>!Skin.String(HomeStyle, bigtile)</visible>
                <visible>Window.IsVisible(home) | Window.IsVisible(weather)</visible>
                <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
                <bottom>266</bottom>
                <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
                <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
                <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
                <animation effect="slide" end="0,160" condition="Skin.String(HomeStyle, TextOnly)">Conditional</animation>
				                <animation effect="slide" end="0,266" condition="Skin.String(HomeStyle, HomeMenuVerticaliconlist)">Conditional</animation>
				                <animation effect="slide" end="0,270" condition="Skin.String(HomeStyle, HomeMenuVertical)">Conditional</animation>

                <include condition="Skin.String(HomeStyle, TextOnly)">Home_Dialogs_TextOnly_Animate</include>
                <include condition="!Skin.String(HomeStyle, TextOnly)">Home_Dialogs_Icons_Animate</include>
                
                <control type="image">
                    <left>16</left>
                    <bottom>16</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <width>1040</width>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <scroll>false</scroll>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
			
			            <control type="group">
									<visible>!Skin.String(HomeStyle, HomeMenuVertical)</visible>
					<visible>Skin.String(HomeStyle, notile)</visible>
                <visible>Window.IsVisible(home) | Window.IsVisible(weather)</visible>
                <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
                <bottom>185</bottom>
                <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
                <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
                <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
                <animation effect="slide" end="0,160" condition="Skin.String(HomeStyle, TextOnly)">Conditional</animation>
                <include condition="Skin.String(HomeStyle, notile)">Home_Dialogs_TextOnly_Animate3</include>
                <include condition="!Skin.String(HomeStyle, notile)">Home_Dialogs_Icons_Animate3</include>
                
                <control type="image">
                    <left>16</left>
                    <bottom>16</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <width>1040</width>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <scroll>false</scroll>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
			
			<control type="group">
						<visible>!Skin.String(HomeStyle, HomeMenuVertical)</visible>
				<visible>Skin.String(HomeStyle, bigtile)</visible>
                <visible>Window.IsVisible(home) | Window.IsVisible(weather)</visible>
                <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
                <bottom>330</bottom>
                <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
                <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
                <include condition="Skin.String(HomeStyle, bigtile)">Home_Dialogs_TextOnly_Animate2</include>
                <include condition="!Skin.String(HomeStyle, bigtile)">Home_Dialogs_Icons_Animate2</include>
                
                <control type="image">
                    <left>16</left>
                    <bottom>16</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <width>1040</width>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <scroll>false</scroll>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
			
						<control type="group">
									<visible>!Skin.String(HomeStyle, HomeMenuVertical)</visible>
				<visible>Skin.String(HomeStyle, LGVIEW)</visible>
                <visible>Window.IsVisible(home) | Window.IsVisible(weather)</visible>
                <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
                <bottom>330</bottom>
                <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
                <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
                <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
                <animation effect="slide" end="0,160" condition="Skin.String(HomeStyle, TextOnly)">Conditional</animation>
                <include condition="Skin.String(HomeStyle, LGVIEW)">Home_Dialogs_TextOnly_Animate2</include>
                <include condition="!Skin.String(HomeStyle, LGVIEW)">Home_Dialogs_Icons_Animate2</include>
                
                <control type="image">
                    <left>16</left>
                    <bottom>16</bottom>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="LineLabel">common/info.png</texture>
                </control>
                <control type="label">
                    <bottom>16</bottom>
                    <left>48</left>
                    <width>1040</width>
                    <height>32</height>
                    <font>Font-RSS</font>
                    <textcolor>LineLabel</textcolor>
                    <scroll>false</scroll>
                    <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(30),   ,]$INFO[Control.GetLabel(32),   ,%][/COLOR]$INFO[Control.GetLabel(31),   ,]</label>
                </control>
            </control>
        </control>
        <control type="label" id="30"><visible>false</visible></control>
        <control type="label" id="31"><visible>false</visible></control>
        <control type="progress" id="32">
            <visible>false</visible>
            <left>-1000</left>
            <width>1</width>
            <height>1</height>
        </control>
    </controls>

</window>